<?xml version="1.0" encoding="UTF-8"?>
<!-- Get -->
<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/api*</pattern>
    </excludes>
    <decorator name="login" page="login.jsp">
        <pattern>/sign-in*</pattern>
    </decorator>
    <decorator name="register" page="login.jsp">
        <pattern>/sign-up*</pattern>
    </decorator>
    <decorator name="vertify" page="login.jsp">
        <pattern>/vertify-email*</pattern>
    </decorator>
    <decorator name="order" page="order.jsp">
        <pattern>/order-details*</pattern>
    </decorator>
    <!-- apply Sitemesh default template -->
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>

    <decorator name="web" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>
<!--    <decorator name="error" page="web.jsp">-->
<!--        <pattern>/error/*</pattern>-->
<!--    </decorator>-->

</decorators>